<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:backgroundTint="@android:color/system_accent1_100"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:paddingBottom="8dp"
            android:text="您目前位於選單..."
            android:textColor="#0E7168"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#595959"
            android:orientation="horizontal">

            <Button
                android:id="@+id/homeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#595959"
                android:drawableTop="@android:drawable/btn_star_big_on"
                android:padding="5dp"
                android:text="主頁" />

            <Button
                android:id="@+id/attractionsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#595959"
                android:drawableTop="@android:drawable/ic_dialog_map"
                android:padding="5dp"
                android:text="景點選擇" />

            <Button
                android:id="@+id/routeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#595959"
                android:drawableTop="@android:drawable/ic_menu_mylocation"
                android:padding="5dp"
                android:text="路線" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/firstDayBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@android:drawable/ic_media_play"
                    android:text="第一天"
                    android:textColor="#C3ED6895" />

                <Button
                    android:id="@+id/secondDayBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@android:drawable/ic_media_play"
                    android:text="第二天"
                    android:textColor="#C3ED6895" />

            </LinearLayout>

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:backgroundTint="#7BCDEF"
                android:text="返回"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>